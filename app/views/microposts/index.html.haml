= form_for :micropost,class:"form-horizontal" do |f|
  .field
    -#= f.label :content
    = f.text_area :content, rows:"3"

  .actions
    = f.submit 'Save', class:"btn btn-primary btn-large"

%br
.stream
  %ol.stream-items.js-navigable-stream
  - @microposts.each do |micropost|
    %li.js-stream-item.stream-item.stream-item.expanding-stream-item{:id => "#{micropost.id}"}
      .content
        .stream-item-header
        .js-tweet-text-container
          %p.TweetTextSize.js-tweet-text.tweet-text= micropost.content
        .card2.js-media-container
        .stream-item-footer


