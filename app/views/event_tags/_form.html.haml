= form_for @event_tag do |f|
  - if @event_tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event_tag.errors.count, "error")} prohibited this event_tag from being saved:"
      %ul
        - @event_tag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tag_name
    = f.text_field :tag_name
  .actions
    = f.submit 'Save'
